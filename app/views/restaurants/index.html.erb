<h1>Here are all registered restaurants:</h1>

<div class="row">
  <% @restaurants.each do |restaurant|%>
    <div class="col-xs-12 col-sm-4">
      <%= link_to restaurant_path(restaurant) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "restaurant-4.jpg" %>');">
        <div class="card-category"><%= restaurant.category %></div>
        <div class="card-description">
          <h2><%= restaurant.name %></h2>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

